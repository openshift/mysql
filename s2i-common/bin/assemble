#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

shopt -s dotglob
echo "---> Installing application source ..."
mv /tmp/src/* ./ 2>/dev/null || true

# Fix source directory permissions
/usr/libexec/fix-permissions ./

# /var/lib/mysql/data
if [ -d "/var/lib/mysql/data" ]; then
    mv /var/lib/mysql/data /silo
    ln -s /silo/data /var/lib/mysql/data
    
fi

# /etc/my.cnf
if [ -f "/etc/my.cnf" ]; then
    mv /etc/my.cnf /silo
    ln -s /silo/my.cnf /etc/my.cnf
    
fi
