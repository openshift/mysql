{
  "objects": [
    {
      "spec": {
        "clusterIP": "None",
        "selector": {
          "name": "mysql-master"
        },
        "ports": [
          {
            "port": 3306
          }
        ]
      },
      "metadata": {
        "labels": {
          "name": "mysql-master"
        },
        "name": "${MYSQL_MASTER_SERVICE_NAME}"
      },
      "apiVersion": "v1",
      "kind": "Service"
    },
    {
      "spec": {
        "clusterIP": "None",
        "selector": {
          "name": "mysql-slave"
        },
        "ports": [
          {
            "port": 3306
          }
        ]
      },
      "metadata": {
        "labels": {
          "name": "mysql-slave"
        },
        "name": "mysql-slave"
      },
      "apiVersion": "v1",
      "kind": "Service"
    },
    {
      "spec": {
        "volumeClaimTemplates": [
          {
            "spec": {
              "resources": {
                "requests": {
                  "storage": "${VOLUME_CAPACITY}"
                }
              },
              "accessModes": [
                "ReadWriteMany"
              ]
            },
            "metadata": {
              "labels": {
                "app": "mysql-master"
              },
              "name": "mysql-master-data"
            }
          }
        ],
        "template": {
          "spec": {
            "containers": [
              {
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [
                  {
                    "mountPath": "/var/lib/mysql/data",
                    "name": "mysql-master-data"
                  }
                ],
                "env": [
                  {
                    "value": "${MYSQL_MASTER_USER}",
                    "name": "MYSQL_MASTER_USER"
                  },
                  {
                    "value": "${MYSQL_MASTER_PASSWORD}",
                    "name": "MYSQL_MASTER_PASSWORD"
                  },
                  {
                    "value": "${MYSQL_USER}",
                    "name": "MYSQL_USER"
                  },
                  {
                    "value": "${MYSQL_PASSWORD}",
                    "name": "MYSQL_PASSWORD"
                  },
                  {
                    "value": "${MYSQL_DATABASE}",
                    "name": "MYSQL_DATABASE"
                  },
                  {
                    "value": "${MYSQL_ROOT_PASSWORD}",
                    "name": "MYSQL_ROOT_PASSWORD"
                  }
                ],
                "ports": [
                  {
                    "containerPort": 3306
                  }
                ],
                "args": [
                  "run-mysqld-master"
                ],
                "image": "${IMAGEN_STREAM}",
                "name": "server"
              }
            ]
          },
          "metadata": {
            "labels": {
              "app": "mysql-master"
            },
            "name": "mysql-master"
          }
        },
        "selector": {
          "matchLabels": {
            "app": "mysql-master"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "strategy": {
          "type": "Recreate"
        },
        "replicas": 1,
        "serviceName": "mysql-master"
      },
      "metadata": {
        "labels": {
          "app": "mysql-master"
        },
        "name": "mysql-master"
      },
      "apiVersion": "apps/v1beta1",
      "kind": "StatefulSet"
    },
    {
      "spec": {
        "volumeClaimTemplates": [
          {
            "spec": {
              "resources": {
                "requests": {
                  "storage": "${VOLUME_CAPACITY}"
                }
              },
              "accessModes": [
                "ReadWriteMany"
              ]
            },
            "metadata": {
              "labels": {
                "app": "mysql-slave"
              },
              "name": "mysql-slave-data"
            }
          }
        ],
        "template": {
          "spec": {
            "containers": [
              {
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [
                  {
                    "mountPath": "/var/lib/mysql",
                    "name": "mysql-slave-data"
                  }
                ],
                "env": [
                  {
                    "value": "${MYSQL_MASTER_SERVICE_NAME}",
                    "name": "MYSQL_MASTER_SERVICE_NAME"
                  },
                  {
                    "value": "${MYSQL_MASTER_USER}",
                    "name": "MYSQL_MASTER_USER"
                  },
                  {
                    "value": "${MYSQL_MASTER_PASSWORD}",
                    "name": "MYSQL_MASTER_PASSWORD"
                  },
                  {
                    "value": "${MYSQL_DATABASE}",
                    "name": "MYSQL_DATABASE"
                  }
                ],
                "ports": [
                  {
                    "containerPort": 3306
                  }
                ],
                "args": [
                  "run-mysqld-slave"
                ],
                "image": "${IMAGEN_STREAM}",
                "name": "server"
              }
            ],
            "volumes": [
              {
                "persistentVolumeClaim": {
                  "claimName": "mysql-slave"
                },
                "name": "mysql-slave-data"
              }
            ]
          },
          "metadata": {
            "labels": {
              "app": "mysql-slave"
            },
            "name": "mysql-slave"
          }
        },
        "selector": {
          "matchLabels": {
            "app": "mysql-slave"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "strategy": {
          "type": "Recreate"
        },
        "replicas": 3,
        "serviceName": "mysql-slave"
      },
      "metadata": {
        "labels": {
          "app": "mysql-slave"
        },
        "name": "mysql-slave"
      },
      "apiVersion": "apps/v1beta1",
      "kind": "StatefulSet"
    }
  ],
  "parameters": [
    {
      "value": "centos/mysql-57-centos7",
      "description": "IMAGEN_STREAM usada para desplegar",
      "name": "IMAGEN_STREAM"
    },
    {
      "value": "mysql-master",
      "description": "Service name for MySQL master service",
      "name": "MYSQL_MASTER_SERVICE_NAME"
    },
    {
      "value": "master",
      "description": "The username used for master-slave replication",
      "name": "MYSQL_MASTER_USER"
    },
    {
      "from": "[a-zA-Z0-9]{12}",
      "generate": "expression",
      "description": "The password used for the MYSQL_MASTER_USER",
      "name": "MYSQL_MASTER_PASSWORD"
    },
    {
      "value": "user",
      "description": "The username that clients will use to connect to the server",
      "name": "MYSQL_USER"
    },
    {
      "from": "[a-zA-Z0-9]{12}",
      "generate": "expression",
      "description": "The password for the MYSQL_USER",
      "name": "MYSQL_PASSWORD"
    },
    {
      "value": "userdb",
      "description": "The name of the database that will be created and replicated",
      "name": "MYSQL_DATABASE"
    },
    {
      "from": "[a-zA-Z0-9]{12}",
      "generate": "expression",
      "description": "The password for the root user",
      "name": "MYSQL_ROOT_PASSWORD"
    },
    {
      "required": true,
      "value": "1Gi",
      "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
      "displayName": "Volume Capacity",
      "name": "VOLUME_CAPACITY"
    }
  ],
  "metadata": {
    "annotations": {
      "tags": "database,mysql,replication",
      "iconClass": "icon-database",
      "description": "MySQL Replication"
    },
    "name": "mysql-replication"
  },
  "apiVersion": "v1",
  "kind": "Template"
}
