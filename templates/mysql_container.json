{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "Myssql-wp-container",
    "annotations": {
      "openshift.io/display-name": "Mysql Repository Container",
      "description": "Creamos la imagen mysql con image stream y builconfig.",
      "tags": "mysql",
      "iconClass": "icon-mysql"
    }
  },
  "parameters": [
    {
      "name": "MYSQL_APPLICATION_NAME",
      "description": "The name of the WordPress instance.",
      "value": "localhost",
      "required": true
    },
    {
      "name": "PROJECT_NAME",
      "description": "The name of the WordPress instance.",
      "value": "image-wp"
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the quickstart Git repository.",
      "value": "https://github.com/samyunodos/mysql-container",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_TAG",
      "description": "The tagged version of the source repository to use.",
      "value": "mysql80-wp",
      "required": true
    },
    {
      "description": "The name of the database user.",
      "name": "MYSQL_USER",
      "value": "userdb"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_PASSWORD",
      "value": "passuserdb"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_DATABASE",
      "value": "mydatabase"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_ROOT_PASSWORD",
      "value": "passroot"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_MASTER_USER",
      "value": "master"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_MASTER_PASSWORD",
      "value": "passmaster"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_MASTER_SERVICE_NAME",
      "value": "mysql-master"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_PORT_NUMBER",
      "value": "3306"
    },
    {
      "description": "The password for the database user.",
      "name": "MYSQL_HOST",
      "value": "${MYSQL_APPLICATION_NAME}"
    },
    {
      "description": "The password for the database user.",
      "name": "DOCKER_REGISTER",
      "value": "docker-registry.default.svc:5000"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Secret",
      "metadata": {
        "name": "${MYSQL_APPLICATION_NAME}-s2i",
        "anotations": {
          "description": "Web Hook Secret Key."
        },
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i"
        }
      },
      "type": "Opaque",
      "data": {
        "WebHookSecretKey": "dGVzdA=="
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${MYSQL_APPLICATION_NAME}-s2i",
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${MYSQL_APPLICATION_NAME}-s2i",
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i"
        }
      },
      "spec": {
        "failedBuildsHistoryLimit": 5,
        "nodeSelector": null,
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${MYSQL_APPLICATION_NAME}-s2i:latest"
          }
        },
        "postCommit": {
        },
        "resources": {
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          },
          {
            "type": "GitHub",
            "github": {
              "secretReference": {
                "name": "${MYSQL_APPLICATION_NAME}-s2i"
              }
            }
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_TAG}"
          }
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "dockerfilePath": "8.0/Dockerfile",
            "forcePull": true,
            "from": {
              "kind": "DockerImage",
              "name": "docker.io/centos/s2i-core-centos7:latest"
            },
            "env": [
              {
                "name": "MYSQL_USER",
                "value": "${MYSQL_USER}"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "${MYSQL_PASSWORD}"
              },
              {
                "name": "MYSQL_DATABASE",
                "value": "${MYSQL_DATABASE}"
              },
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "${MYSQL_ROOT_PASSWORD}"
              },
              {
                "name": "MYSQL_MASTER_USER",
                "value": "${MYSQL_MASTER_USER}"
              },
              {
                "name": "MYSQL_MASTER_PASSWORD",
                "value": "${MYSQL_MASTER_PASSWORD}"
              },
              {
                "name": "MYSQL_MASTER_SERVICE_NAME",
                "value": "${MYSQL_MASTER_SERVICE_NAME}"
              },
              {
                "name": "MYSQL_PORT_NUMBER",
                "value": "${MYSQL_PORT_NUMBER}"
              },
              {
                "name": "MYSQL_HOST",
                "value": "${MYSQL_HOST}"
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Secret",
      "metadata": {
        "name": "${MYSQL_APPLICATION_NAME}-img",
        "anotations": {
          "description": "Web Hook Secret Key."
        },
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i",
          "build2": "${MYSQL_APPLICATION_NAME}-img"
        }
      },
      "type": "Opaque",
      "data": {
        "WebHookSecretKey": "cHJ1ZWJhCg=="
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${MYSQL_APPLICATION_NAME}-img",
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i",
          "build2": "${MYSQL_APPLICATION_NAME}-img"
        }
      }
    },
    {
      "apiVersion": "build.openshift.io/v1",
      "kind": "BuildConfig",
      "metadata": {
        "labels": {
          "app": "${MYSQL_APPLICATION_NAME}",
          "build1": "${MYSQL_APPLICATION_NAME}-s2i",
          "build2": "${MYSQL_APPLICATION_NAME}-img"
        },
        "name": "${MYSQL_APPLICATION_NAME}-img",
        "namespace": "${PROJECT_NAME}"
      },
      "spec": {
        "failedBuildsHistoryLimit": 5,
        "nodeSelector": null,
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${MYSQL_APPLICATION_NAME}-img:latest"
          }
        },
        "postCommit": {
        },
        "resources": {
        },
        "runPolicy": "Serial",
        "source": {
          "contextDir": "scripts",
          "git": {
            "ref": "mysql80-wp",
            "uri": "https://github.com/samyunodos/mysql-container.git"
          },
          "type": "Git"
        },
        "type": "Source",
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "${PROJECT_NAME}",
              "name": "${MYSQL_APPLICATION_NAME}-s2i:latest"
            },
            "env": [
              {
                "name": "MYSQL_USER",
                "value": "${MYSQL_USER}"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "${MYSQL_PASSWORD}"
              },
              {
                "name": "MYSQL_DATABASE",
                "value": "${MYSQL_DATABASE}"
              },
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "${MYSQL_ROOT_PASSWORD}"
              },
              {
                "name": "MYSQL_MASTER_USER",
                "value": "${MYSQL_MASTER_USER}"
              },
              {
                "name": "MYSQL_MASTER_PASSWORD",
                "value": "${MYSQL_MASTER_PASSWORD}"
              },
              {
                "name": "MYSQL_MASTER_SERVICE_NAME",
                "value": "${MYSQL_MASTER_SERVICE_NAME}"
              },
              {
                "name": "MYSQL_PORT_NUMBER",
                "value": "${MYSQL_PORT_NUMBER}"
              },
              {
                "name": "MYSQL_HOST",
                "value": "${MYSQL_APPLICATION_NAME}"
              }
            ]
          }
        },
        "triggers": [
          {
            "github": {
              "secret": "xdlwMqxFiVkfR9fBiIaV",
              "secretReference": {
                "name": "${MYSQL_APPLICATION_NAME}-img"
              }
            },
            "type": "GitHub"
          },
          {
            "generic": {
              "secret": "F-ilfroO9PAhjTRSWX67"
            },
            "type": "Generic"
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          }
        ]
      }
    }
  ]
}
